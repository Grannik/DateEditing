#!/bin/bash
while [ 1 ]
do
CHOICE=$(
whiptail --backtitle " Программа написана на Whiptail"\
         --title "Редактирование и настройка Date"\
         --menu "Клавишами верх/низ выберите справку и нажмите enter.
                 Для выхода выберите Exit." 0 0 20\
  "1)" "Первая строка и комментарий"\
  "2)" "Показать дату"\
  "3)" "Синтаксис"\
  "4)" "Показать текущий год"\
  "5)" "Показать текущий месяц"\
  "6)" "Показать номер текущего месяца"\
  "7)" "Показать номер текущего дня года"\
  "8)" "Показать номер текущего дня месяца"\
  "9)" "Показать номер текущего дня недели"\
 "10)" "Показать название дня недели"\
 "11)" "Показать сколько часов"\
 "12)" "Показать сколько минут"\
 "13)" "Показать сколько секунд"\
 "14)" "Показать месяц/день/год"\
 "15)" "Показать полный набор даты"\
 "16)" "Показать дату следующего дня недели"\
 "17)" "Показать часы watch"\
 "18)" "Показать часы в программе banner"\
 "19)" "Показать часы в программе figlet"\
 "20)" "Показать часы в программе toilet"\
 "21)" "Запустить часы в программе tput"\
 "22)" "Показать скрипт часов в программе tput"\
 "23)" "Запустить прогресс до конца минуты"\
 "24)" "Показать скрипт прогресс до конца минуты"\
 "25)" "Запустить пример часов"\
 "26)" "Показать скрипт примера часов"\
 "27)" "27"\
 "28)" "Сайты"\
 "29)" "Редактировать мой файл DateEditing"\
 "30)" "Exit"\
 3>&2 2>&1 1>&3
)

result=$()
case $CHOICE in
	"1)")   
result=" #
 любой текс после данного знака читается как комментарий
 за исключением первой строки:
 #!/bin/bash\n
"
        ;;
        "2)")   
result=" date "
        ;;
        "3)")   
result="\n
 Первым пишется                                                   date
 Начало параметров со знака                                       +
 Каждый параметр начинается со днака                              %
 Большая или малая латинская буква обозначает название параметра  A a
 Между параметрами ставится знак                                  :
\n"
        ;;
        "4)")
result="\n
 Краткая запись текущего года:
 date +%y\n
 Полная запись текущего года:
 date +%Y
\n"
        ;;
        "5)")   
result="\n
 Краткая запись текущего месяца:
 date +%b\n
 Полная запись текущего месяца:
 date +%B
\n"
        ;;
        "6)")   
result=" date +%m "
        ;;
        "7)")
result=" date +%j "
        ;;
        "8)")   
result=" date +%d "
        ;;
        "9)")  
result=" date +%u "
        ;;
        "10)")
result="\n
 Краткая запись текущего дня недели:
 date +%a
 Полная запись текущего дня недели:
 date +%A
\n"
        ;;
        "11)")   
result="\n
 Показать сколько часов в формате 12:
 date +%I\n
 Показать сколько часов в формате 24:
 date +%H
\n"
        ;;
        "12)")
result=" date +%M "
        ;;
        "13)")   
result=" date +%S "
        ;;
        "14)")   
result=" date +%D "
        ;;
        "15)")
result="date +%Y+%B+%m+%j+%d+%u+%A+%H+%S"
        ;;
        "16)")
result="\n
 date -d \"next Названия дня недели на английском языке с большой буквы\"
 Понедельник Вторник Среда     Четверг  Пятница Суббота  Воскресенье
 Monday      Tuesday Wednesday Thursday Friday  Saturday Sunday
\n"
        ;;
        "17)")
result=" watch -c \"date\" "
        ;;
        "18)")
result=" watch -n 1 -t 'banner \$(date +%H:%M:%S)' "
        ;;
        "19)")   
result=" watch -t -n1 \"date +%T|figlet\" "
        ;;
        "20)")
result=" watch -n 1 -t 'toilet \$(date +%H:%M:%S)' "
        ;;
        "21)")   
./watchTput
        ;;
        "22)")   
whiptail --textbox "/home/grannik/TePseudographics/Date/watchTput" 0 0 --scrolltext
        ;;
        "23)")   
./watchPrigress
        ;;
        "24)")  
whiptail --textbox "/home/grannik/TePseudographics/Date/watchPrigress" 0 0 --scrolltext
        ;;
        "25)")   
./watchExample
        ;;
        "26)")
whiptail --textbox "/home/grannik/TePseudographics/Date/watchExample" 0 0 --scrolltext
        ;;
        "27)")   
result="27"
        ;;
        "28)")   
result="28"
        ;;
        "29)")
ne DateEditing
        ;;
        "30)")   
exit
        ;;
esac
whiptail --msgbox "$result" 0 0
done
exit
